{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "sourceMap": true,
  
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "src/**/*.d.ts",
    "global.d.ts",
    "eslint.config.js"
  ]
}
