<div class="container-form">
  <form class="bgd-dark">
    <h1 class="form-title">Регистрация</h1>
    <div class="container-input-group">
      <div class="input-group">
        <label for="email">Почта</label>
        <input type="text"  id="email" name="email" class="input-field input-small bgd-light">
      </div>
      <div class="input-group">
        <label for="login">Логин</label>
        <input type="text"  id="login" name="login" class="input-field input-small bgd-light">
      </div>
      <div class="input-group">
        <label for="first_name">Имя</label>
        <input type="text"  id="first_name" name="first_name" class="input-field input-small bgd-light">
      </div>
      <div class="input-group">
        <label for="second_name">Фамилия</label>
        <input type="text"  id="second_name" name="second_name" class="input-field input-small bgd-light">
      </div>
      <div class="input-group">
        <label for="phone">Телефон</label>
        <input type="tel"  id="phone" name="phone" class="input-field input-small bgd-light">
      </div>
      <div class="input-group">
        <label for="password">Пароль</label>
        <input type="password"  id="password" name="password" class="input-field input-small bgd-light">
      </div>
      <div class="input-group">
        <label for="password_check">Повторите пароль</label>
        <input type="password"  id="password_check" name="password_check" class="input-field input-small bgd-light">
      </div>
    </div>
    <div class="btn-group">
      <button type="submit" class="btn">Зарегистрироваться</button>
      <span class="btn-link">Войти</span>
    </div>
  </form>
</div>