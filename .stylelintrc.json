{
  "extends": ["stylelint-config-standard"],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "color-hex-length": "short",
    "block-no-empty": null,
    "order/properties-alphabetical-order": true
  },
  "ignoreFiles": [
    "dist/*"
  ]
}
